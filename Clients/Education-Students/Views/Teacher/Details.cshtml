@model Education_Admins.ViewModels.TeacherViewModel

@section styles{
  <link rel="stylesheet" href="~/css/course-detail-page.css">
}

<article class="teacher-detail">
  <h1 class="page-title">@Model!.FirstName</h1>
  <section class="teacher-description">
    <div>Course number: @Model.LastName</div>
    <div>Duration: @Model.StreetAddress</div>
    <h2>Details: @Model.City</h2>
    <hr>
    <h4>Description</h4>
    <p>@Model.Email</p>
    <a class="go-back" asp-action="Index"><i class="fa-solid fa-left-long"></i>Back to teachers</a>
  </section>
</article>