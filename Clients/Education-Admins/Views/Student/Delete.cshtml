@model Education_Admins.ViewModels.StudentViewModel

@{
  ViewBag.Title = "Delete";
}

@section styles{
<link rel="stylesheet" href="~/css/delete-course-page.css">
}

<h1 class="page-title">Are you sure you want to delete this student?</h1>

<article class="delete-student">
  <h4>Student</h4>
  <dl class="dl-horizontal">
    <dd>
      @Html.DisplayFor(model => model.FirstName)
    </dd>
    <dd>
      @Html.DisplayFor(model => model.LastName)
    </dd>
  </dl>

  <a class="go-back" asp-controller="student" asp-action="delete"><i class="fa-solid"></i>Yes</a>
  <a class="go-back" asp-action="Index"><i class="fa-solid"></i>No</a>
