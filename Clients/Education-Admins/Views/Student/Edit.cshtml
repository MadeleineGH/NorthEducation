@model Education_Admins.ViewModels.EditStudentViewModel

@{
  ViewBag.Title = "Edit Student";
}

<h1 class="page-title">Update Student</h1>
<section class="form-container">
  <h4>Student information</h4>
  <form class="form" asp-action="Edit" method="post">
     <div class=" form-control">
      <input asp-for="@Model!.Id" input type="hidden" />
    </div>
    <div class=" form-control">
      <label asp-for="@Model!.FirstName"></label>
      <input asp-for="@Model!.FirstName" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.LastName"></label>
      <input asp-for="@Model!.LastName" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.Email"></label>
      <input asp-for="@Model!.Email" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.PhoneNumber"></label>
      <input asp-for="@Model!.PhoneNumber" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.StreetAddress"></label>
      <input asp-for="@Model!.StreetAddress" />
    </div>
    <div class="form-control">
      <label asp-for="@Model!.PostalCode"></label>
      <input asp-for="@Model!.PostalCode" />
    </div> 
    <div class="form-control">
      <label asp-for="@Model!.City"></label>
      <input asp-for="@Model!.City" />
    </div> 
    <div class="form-control">
      <label asp-for="@Model!.Country"></label>
      <input asp-for="@Model!.Country" />
    </div>
    </div>
    <button type="submit" class="btn btn-primary btn-update">Update</button>
    <a asp-controller="Student" asp-action="Index" class="btn btn-primary btn-cancel">Cancel</a>
  </form>
</section>