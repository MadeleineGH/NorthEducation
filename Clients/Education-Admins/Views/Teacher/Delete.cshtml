@model Education_Admins.ViewModels.TeacherViewModel

@{
  ViewBag.Title = "Delete";
}

@section styles{
<link rel="stylesheet" href="~/css/delete-object-page.css">
}

<h1 class="page-title">Are you sure you want to delete this teacher?</h1>

<article class="delete-teacher">
  <form class="form" asp-action="Delete" asp-route-id="@Model!.TeacherId" method="post">
    <h2>Teacher</h2>
    <dl class="dl-horizontal">
      <dd>
        @Html.HiddenFor(x => x.TeacherId)
      </dd>
      <dd>
        @Html.DisplayFor(model => model.FirstName)
      </dd>
      <dd>
        @Html.DisplayFor(model => model.LastName)
      </dd>
      <br>
      <hr>
      <br>
      <button type="submit" class="btn btn-primary btn-delete">Yes</button>
    </dl>
    <a class="go-back" asp-action="Index"><i class="fa-solid"></i><button type="button"
        class="btn btn-primary btn-back">No</button></a>
  </form>
</article>
